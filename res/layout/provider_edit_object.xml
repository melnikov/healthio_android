<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#c2d8f2">
	<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="50dip" android:background="@drawable/layout_title">
		<TextView android:textColor="@android:color/white" android:layout_width="fill_parent" android:layout_height="fill_parent" android:textStyle="bold" android:textSize="18px" android:gravity="center" android:text="Edit Provider" />
	</LinearLayout>
	<ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
			<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/layout_style" android:layout_margin="10dp" android:padding="12dp">
				<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"> 
					<TextView android:text="Name" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:gravity="left" android:textColor="#000000" />
					<EditText android:id="@+id/title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="left" android:inputType="text" />
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView android:text="Speciality" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:gravity="left" android:textColor="#000000" />
					<EditText android:id="@+id/specialty" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="left" android:editable="false" />
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView android:text="Affiliation" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:gravity="left" android:textColor="#000000" />
					<EditText android:id="@+id/affiliation" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="left" android:inputType="text" />
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView android:text="City Name" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:gravity="left" android:textColor="#000000" />
					<AutoCompleteTextView android:id="@+id/city_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="left" />
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView android:text="Phone" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:gravity="left" android:textColor="#000000" />
					<EditText android:id="@+id/phone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="left" android:inputType="phone" />
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView android:text="Fax" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:gravity="left" android:textColor="#000000" />
					<EditText android:id="@+id/fax" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="left" android:inputType="phone" />
				</LinearLayout>
	    		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent">
	    			<TextView android:text="Email" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:gravity="left" android:textColor="#000000" />
					<EditText android:id="@+id/email" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="left" android:inputType="text" />
	    		</LinearLayout>
	    		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent">
	    			<TextView android:text="Rating" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:gravity="left" android:textColor="#000000" />
					<SeekBar android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/rating" android:layout_marginRight="5dp" />
	    		</LinearLayout>
	    		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent">
			        <TextView android:text="Rating: " android:textStyle="bold" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="85dp" android:textColor="#000000" />
			        <TextView android:id="@+id/rating_out" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textStyle="bold" android:gravity="left" android:textColor="#000000" />
	    		</LinearLayout>
	    	</LinearLayout>
			<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">			
				<Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/indication_submit" android:onClick="submit" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>	
</LinearLayout>