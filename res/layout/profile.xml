<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#c2d8f2">
	<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="50dip" android:background="@drawable/layout_title">
		<TextView android:textColor="@android:color/white" android:layout_width="fill_parent" android:layout_height="fill_parent" android:textStyle="bold" android:textSize="18px" android:gravity="center" android:text="View Profile" />
	</LinearLayout>
	<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/layout_style" android:layout_margin="10dp" android:padding="12dp">
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/city" android:textColor="#000000" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/email" android:textColor="#000000" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/height" android:textColor="#000000" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/weight" android:textColor="#000000" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/date_of_birth" android:textColor="#000000" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/gender" android:textColor="#000000" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tobacco" android:textColor="#000000" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/alcohol" android:textColor="#000000" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/alert" android:textColor="#000000" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">			
		<Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Edit" android:onClick="submit" />
	</LinearLayout>
</LinearLayout>